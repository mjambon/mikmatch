name = "mikmatch_pcre"
version = "VERSION"
description = "Pattern matching extended with regexps in Ocamllex syntax"

requires = "camlp4 mikmatch_pcre.lib"
requires(toploop) += "tophide"

archive(syntax,toploop) = "pa_mikmatch_pcre.cma"
